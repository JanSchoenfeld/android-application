<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fhm.wi.team5.android_application.ForgotPasswordActivity">


    <ImageView
        android:id="@+id/image_help"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@+id/text_forgot_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/help_icon"
        android:src="@drawable/help2" />

    <TextView
        android:id="@+id/text_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/forgot_pw_text_view"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="12"
        android:hint="@string/forgot_pw_edit_email"
        android:inputType="textEmailAddress" />


    <Button
        android:id="@+id/button_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_email"
        android:layout_centerHorizontal="true"
        android:text="@string/forgot_pw_button" />


</RelativeLayout>
